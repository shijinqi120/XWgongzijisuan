.container {
  padding: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.header {
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form-group {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-row {
  display: flex;
  justify-content: space-between;
}

.form-row .form-group {
  width: 48%;
}

.btn-calculate {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-reset {
  width: 100%;
  height: 90rpx;
  background-color: #f8f8f8;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-section {
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-label {
  color: #666;
  font-size: 28rpx;
}

.result-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-total {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1rpx solid #ddd;
}

.result-total-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-total-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
}